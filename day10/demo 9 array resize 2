
//collection of elements of same type 

public class Demo1 {

//arrays cannot be resized -> but the same ref var can be used to ref to an entirely new array
	
	
	int[] marks= new int[]{3,6,8,7,9};
	
	
	
	void disp()
	{
	
		System.out.println("old length "+marks.length);
		
		for(int a:marks)
		{
			System.out.print(a+", ");
		}
		
		System.out.println("new values");
		marks=new int[7];
		System.out.println("new length "+marks.length);
		
		for(int a:marks)
		{
			System.out.print(a+" , ");
		}
	}
	
	
	public static void main(String[] args) {	

		new Demo1().disp();
		
		//Demo1 d1=new Demo1();
		//d1.disp();
	}
}

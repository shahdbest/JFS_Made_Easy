import java.util.Arrays;
import java.util.List;
import java.util.Optional;

public class Java8Demos{

	
	List<Player> players;

	
	Java8Demos()
	{
		
		players=Arrays.asList(new Player("virat", 18, "batsman"),
				new Player("rohit", 45, "batsman"),
				new Player("sachin", 10, "batsman"),
				new Player("rahul", 1, "batsman"));
		
	}
	
	
	Optional<Player> findByJerseyNumber(int jerseyNo)
	{
		
		for(Player p:players)
		{
			if(p.getJersyNo()==jerseyNo)
				return Optional.of(p);
		}
		return Optional.empty();
	}
	
	
	public static void main(String[] args) {
		
		Java8Demos j=new Java8Demos();
		Optional<Player> foundplayer= j.findByJerseyNumber(10);		
	
		if(foundplayer.isPresent())
		System.out.println(foundplayer.get().getName());
		
		else
			System.out.println("player not found");
	}
	
}
